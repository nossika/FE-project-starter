{
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "extends": [
    "plugin:vue/essential"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
      "semi": ["error", "always"],
      "indent": ["error", 2],
      "comma-dangle": ["error", "always-multiline"]
  },
  "plugins": ["vue"]
}